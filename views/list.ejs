<%- include('header') %>                                                                 <%#header and footer are the name of ejs file and "#" is used for comment tag %>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">

    
        <!-- newlistItems is an array here and check the use of ( = )scriplet tag on docs  as output in html can only be received by the use ( = )-->
        <% newListItems.forEach(item => { %>
            <form action="/delete" method="post" action="/">
                <div class="item"  > 
                    <input type="checkbox" name="checkBox"  value="<%= item._id %>"  onChange= "this.form.submit()"/>
                    <p><%= item.name %></p>
                 </div>
                 <input type="hidden" name="listName" value="<%= listTitle %>" />
            </form>
       <% }); %>
    
        
  
    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off"/>
        <button type="submit" name="list" value=<%= listTitle %> >+</button>
      </form>
</div>

    
<%- include("footer") %> 
    
  